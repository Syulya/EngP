.eng-galery
	max-width 100%
	overflow hidden
	margin 0 auto
	padding 0
	margin-bottom 30px
	
.eng-idi__title
	text-align center
.eng-idi__text	
	text-align center
.eng-idioms-wrapper
	max-width 100%
	overflow hidden
	padding 0	
	
.eng-idioms
	width 31%
	height 270px
	padding 10px
	margin-right 3.5%
	background-color rgba(0, 150, 136, 0.36)
	border-radius 5%
	position relative
	margin-top 15px
	float left
	
	&:nth-child(3n)
		margin-right 0
	
	@media(max-width 1050px)
		width 48%
		margin-right 4%
		&:nth-child(3n)
			margin-right 4%
		&:nth-child(2n)
			margin-right 0
	
	
	@media(max-width 590px)
		width 100%
		

	
	
.eng-back
	width 100%
	height 100%
	position relative
	top 0
	left 0
	text-align center
	border-radius 5%
	
	&__title
		font-size 24px
		text-transform uppercase
		color #d80610
		font-weight 700
		padding-top 10px
		text-shadow: 1px 1px 1px #666
		@media(max-width 1200px)
			font-size 22px
	&__text
		color #410347
		font-weight bold
		text-shadow: 1px 1px 1px #fff
		@media(max-width 1200px)
			font-size 16px
		@media(max-width 590px)
			font-size 20px
.eng-front
	width 100%
	height 100%
	padding 10px
	position absolute
	top 0
	left 0
	text-align center
	border-radius 5%
	background-color rgba(0, 150, 136, 0.2)
	
	display none
	

	&__example
		font-size 20px
		font-style italic
		font-weight 600
		text-shadow 1px 1px 1px rgba(0, 0,0, 0.7)
		color #fff
		padding-top 145px
		@media(max-width 1200px)
			font-size 16px
		@media(max-width 590px)
			font-size 20px
		

span.idiom	
	color #d80610
	font-weight bold
	font-size 20px
	text-shadow: 1px 1px 1px #666

