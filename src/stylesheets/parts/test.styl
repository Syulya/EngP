.eng-test
	width 100%
	height 800px
	margin 0 auto
	font-size 18px
	color black
	margin-bottom 20px
	position relative
	@media(max-width 580px)
		font-size 14px
		

.eng-test-title
	text-align center
	color black
	
.eng-theory
	width 100%
	height 100%
	box-shadow 0 0 10px rgba(0,0,0,0.5)
	padding 10px 20px
	position relative



.eng-theory__be
	color red
	
.eng-practice
	width 100% 
	min-height 100%
	box-shadow 0 0 10px rgba(0,0,0,0.5)
	padding 10px 20px
	position absolute
	top 0
	display none
	overflow hidden

.eng-test-btn 
	text-align center
	display block
	margin-top 20px
	margin-topotton 20px
	float left
	margin-left 20px
	a
		cursor pointer
		font-weight bold
		border 1px solid #685569
		text-decoration none
		color #685569
		padding 7px 10px
		display inline-block
		border-radius 20px
		box-shadow 0 0 5px rgba(0,0,0,0.5)
		transition 0.5s all
		&:hover
			text-decoration none
			color #6d9966
			border-color #6d9966	
		

#formtest li
	padding 10px


.btn-test
	width: 100px
