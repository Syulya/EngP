a
	text-decoration none
ul
	margin 0
	padding 0
	list-style none
	
.eng-sidewrap__title
	color #fff
	font-size 24px
	text-align center
	margin-bottom 10px
	
.eng-sidewrap 
	background #685569
	padding 0
	margin 0
	box-shadow 0 0 10px rgba(0,0,0,0.5)
	@media(max-width 770px)
		display none


.eng-sidenav a
	background #685569
	color #fff
	font-size 18px
	font-weight bold
	padding 10px
	display block
	border-bottom 1px solid #666
	text-decoration none
	transition 0.5s all
	&:hover
		color #6d9966
		background #89758a
		text-decoration none 
		padding 10px 0 10px 20px
		
	@media(max-width 800px)
			font-size 18px
.eng-drop a
