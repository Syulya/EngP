.slick-dots
	bottom 10px
	@media(max-width 770px)
		bottom -25px
	

.slick-dots li button
	border 1px solid #777
	border-radius 50%
	transition border-color .3s
	
	&:before
		content ''
		width 10px
		height 10px
		background #777
		opacity 1
		border-radius 50%
		top 50%
		left 50%
		margin -5px 0 0 -5px
		transition background .3s

	&:hover
		border-color #fff
		&:before
			background #fff
.slick-dots li.slick-active button
		border-color #fff
		&:before
			background #fff
			
		
	
