

.eng-wrapper
	margin-right 10px

.eng-main__title 
	text-align center
.eng-main-content
	font-size 20px
.eng-item
	font-size 20px
	box-shadow 0 0 10px rgba(0,0,0,0.5)
	margin-bottom 15px
	padding 10px
	&:hover
		cursor pointer
	
.eng-prepos
	overflow hidden
.eng-prep-cont__title,
.eng-item__title
	font-size 26px
	font-weight bold
.eng-prep-cont
	float left
.eng-prep
	float right
	margin 10px auto
	span
		font-size 24px
		margin-right 20px
		font-weight bold
		text-shadow 3px 3px 3px #6c6b70
		display inline-block
		&:hover
			cursor pointer
.on
	color yellow
	transform rotate(30deg)	
.about
	color red
	transform rotate(-50deg)	
.for
	color green
	transform rotate(40deg)
.at
	color blue
	transform rotate(-20deg)
.in
	color #792794
	transform rotate(20deg)
.with
	color #e081cb
	transform rotate(-50deg)