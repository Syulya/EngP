.menu-wrapper
	position fixed
	left 0
	right 0
	top 0
	height 87px
	z-index 200
	display none
	
	@media(max-width 770px)
		display block
	

.menu-links 
	width 50%
	min-height 100%
	padding-left 0
	margin 0
	background #685569
	position fixed
	top 0
	left -20px
	opacity 0
	display none
	@media(max-width 770px)
		position absolute
	

	


.menu-cover
	height 87px
	min-width 100%
	position absolute
	top 0
	background #685569

	

.link_burger
	min-width 30%
	height 60px
	cursor pointer
	float right
	font-family sans-serif
	
	
	&:hover
		.menu-sign,
		.menu-letters
			color #6d9966
		

.menu-sign
	width 70px
	height 70px
	padding-top 15px
	float right
	font-size 40px
	line-height 50px
	color #fff
	cursor pointer


.menu-letters
	text-transform uppercase
	color #fff
	width 50px
	height 50px
	float right
	margin-right 50px
	margin-top 25px
	font-size 26px
	line-height 30px
	vertical-align center


.menu-links ul
	list-style none
	height 100%

	

	
	

.menu-links ul a
	font-weight 600
	text-decoration none
	padding 10px 15px
	color #fff
	&:hover
		color #6d9966
